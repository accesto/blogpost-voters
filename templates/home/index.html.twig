{% extends 'base.html.twig' %}

{% block body %}
  <h1>Hello world!</h1>
  {% if app.user %}
    <p>Welcome, {{ app.user.email }}!</p>
    <a href="{{ path('app_secured_index') }}">Go to secured area &gt;</a>
  {% else %}
    <p>You are not logged in!</p>
    <a href="{{ path('app_security_login') }}">Go to login page &gt;</a>
  {% endif %}
{% endblock %}
